<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <classPathEntry
            location="G:\data\mvnRespo\mysql\mysql-connector-java\5.1.39\mysql-connector-java-5.1.39.jar"/>
    <context id="pb-account-common" targetRuntime="MyBatis3">

        <!-- 数据库连接 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/loan?useUnicode=true&amp;characterEncoding=UTF8&amp;connectTimeout=5000&amp;socketTimeout=10000&amp;tinyInt1isBit=false"
                        userId="root"
                        password="root">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 数据表对应的model 层  -->
        <javaModelGenerator targetPackage="com.intpay.loan.model.label"
                            targetProject="src/main/java">
            <property name="enableCountByExample" value="true"/>
            <property name="enableUpdateByExample" value="true"/>
            <property name="enableDeleteByExample" value="true"/>
            <property name="enableSelectByExample" value="true"/>
            <property name="selectByExampleQueryId" value="true"/>
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="false"/>
        </javaModelGenerator>

        <!-- sql mapper 隐射配置文件 -->
        <sqlMapGenerator targetPackage="com.intpay.loan.mapper.label" targetProject="src/main/resources">
            <property name="trimStrings" value="true"/>
        </sqlMapGenerator>

        <!-- 在ibatis2 中是dao层，但在mybatis3中，其实就是mapper接口 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.intpay.loan.mapper.label"
                             targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>


        <table tableName="t_common_tools" />



    </context>
</generatorConfiguration>